{   
	"rules": {
        "indent": [true, "spaces"],
        "no-unused-variable": true,
        "no-duplicate-variable": true,
        "triple-equals": true,
        "prefer-const": true,
        "array-type": [true, "array"],
        "class-name": true,
        "no-unnecessary-initializer": true,
        "variable-name": [true, "ban-keywords"],
        "no-any": true,
        "no-empty-interface": true,
        "only-arrow-functions": [true, "allow-named-functions"],
        "no-debugger": true,
        "no-empty": true,
        "one-variable-per-declaration": [true],
        "typedef": [true, "call-signature", "arrow-call-signature", "parameter", "arrow-parameter", "variable-declaration", "property-declaration", "member-variable-declaration"]
    },
    "include": [
        "./src/**/*"
    ]
}